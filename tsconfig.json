{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./build/debug",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,    
    "buildOnSave": true
}